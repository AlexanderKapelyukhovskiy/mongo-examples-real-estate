@model RealEstate.Rentals.Rental

@{
    ViewBag.Title = "Adjust Price";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AdjustPrive</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>AdjustPrice</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Model.Description
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Old Price", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Model.Price
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Adjust Price", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBox("NewPrice", Model.Price, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Reason", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextArea("Reason", new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessage("Reason", "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
